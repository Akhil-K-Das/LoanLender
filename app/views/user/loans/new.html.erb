<div class="max-w-xl mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-xl font-bold mb-4">Request a New Loan</h2>

  <%= form_with model: @loan, url: user_loans_path, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :amount, class: "block mb-1 font-semibold" %>
      <%= form.number_field :amount, step: 100, class: "w-full border p-2 rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :interest_rate, "Interest Rate (%)", class: "block mb-1 font-semibold" %>
      <%= form.number_field :interest_rate, step: 0.1, class: "w-full border p-2 rounded" %>
    </div>

    <%= form.submit "Submit Request", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  <% end %>
</div>
