<div class="max-w-xl mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-xl font-bold mb-4">Loan Details</h2>
  <p><strong>Amount:</strong> â‚¹<%= @loan.amount %></p>
  <p><strong>Interest Rate:</strong> <%= @loan.interest_rate %>%</p>
  <p><strong>Status:</strong> <%= @loan.status.titleize %></p>
  <%= link_to "Adjustment Details", adjustment_details_user_loan_path(@loan), class: "text-blue-500 underline" %>

  <% if @loan.status == "approved" %>
    <div class="mt-4">
      <%= button_to "Accept Loan", accept_user_loan_path(@loan), method: :patch, class: "bg-green-600 text-white px-4 py-2 rounded mr-2" %></br>
      <%= button_to "Reject Loan", reject_user_loan_path(@loan), method: :patch, class: "bg-red-600 text-white px-4 py-2 rounded" %>
    </div>
  <% elsif @loan.status == "waiting_for_adjustment_acceptance" %>
    <div class="mt-4">
      <%= button_to "Accept Adjustment", accept_user_loan_path(@loan), method: :patch, class: "bg-green-600 text-white px-4 py-2 rounded mr-2" %></br>
      <%= button_to "Request Readjustment", request_readjustment_user_loan_path(@loan), method: :patch, class: "bg-yellow-500 text-white px-4 py-2 rounded mr-2" %></br>
      <%= button_to "Reject", reject_user_loan_path(@loan), method: :patch, class: "bg-red-600 text-white px-4 py-2 rounded" %>
    </div>
  <% elsif @loan.status == "open" %>
    <div class="mt-4">
      <%= button_to "Repay Loan", repay_user_loan_path(@loan), method: :patch, class: "bg-purple-600 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>
